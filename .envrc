# Environment configuration for Droply
# This file is automatically updated when you switch branches

# Get current branch
current_branch=$(git branch --show-current 2>/dev/null)

if [ -z "$current_branch" ]; then
    echo "‚ùå Not in a Git repository"
    return 1
fi

# Set environment based on branch
if [ "$current_branch" = "main" ]; then
    export FLASK_ENV=production
    export ENVIRONMENT=production
    export FLASK_DEBUG=0
    export YOUR_DOMAIN=https://droply.live
    echo "üöÄ Production environment (main branch)"
    echo "   Book Now button: Hidden"
    echo "   Debug logging: Minimal"
else
    export FLASK_ENV=development
    export ENVIRONMENT=development
    export FLASK_DEBUG=1
    export YOUR_DOMAIN=http://localhost:5000
    echo "üîß Development environment ($current_branch branch)"
    echo "   Book Now button: Visible"
    echo "   Debug logging: Enabled"
fi

echo "‚úÖ Ready to run: python app.py"
